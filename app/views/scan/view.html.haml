.well
  %a{ href: "/scan/paste?rid=#{params[:rid]}"}
    %button.btn.btn-main
      Add Scan
  / .btn-group{"data-toggle" => "buttons"}
  /   %label.btn.btn-primary
  /     %input{:type => "checkbox"}/
  /     Option 1
